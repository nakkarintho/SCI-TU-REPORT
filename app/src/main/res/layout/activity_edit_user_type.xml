<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditRoleActivity">
    <com.coldzify.finalproject.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="@string/edit_role_th"
        app:icon_pic="@drawable/ic_menugrid"
        />

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="@string/email_th"
            android:gravity="end"
            android:layout_gravity="center"
            android:textSize="20sp"
            app:fontFamily="@font/my_font"
            />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/email_autoComplete"
            android:layout_marginLeft="40dp"
            android:padding="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/room_edittext"
            android:completionThreshold="1"
            app:fontFamily="@font/my_font"
            android:textSize="20sp"
            />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/red_round_button"
        android:onClick="OnClickSearchRole"
        android:text="@string/search_email"
        android:textColor="@color/white"
        android:textSize="15dp" />


    <LinearLayout
        android:id="@+id/addRole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:minWidth="70dp"
                android:text="@string/select_user_type_th"
                android:textSize="20sp"
                app:fontFamily="@font/my_font" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/staff_spinner"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:padding="6dp"
                android:textColor="@color/color_black"
                android:textSize="20sp"
                app:fontFamily="@font/my_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/red_round_button"
            android:onClick="onClickChangePermission"
            android:text="@string/save_th"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:fontFamily="@font/my_font" />


    </LinearLayout>


</LinearLayout>